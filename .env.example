# Environment
NODE_ENV=development
PORT=3000

# Security
API_KEY=your-secret-api-key-change-in-production
WEBHOOK_SECRET=your-webhook-secret-for-voiceflow

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/royal-response
MONGODB_TEST_URI=mongodb://localhost:27017/royal-response-test

# OpenAI
OPENAI_API_KEY=sk-your-key-here
OPENAI_ORG_ID=org-your-org-here

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE=+447700900000
TWILIO_WHATSAPP=whatsapp:+447700900000

# SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx
FROM_EMAIL=noreply@yourcompany.com
FROM_NAME=Royal Response

# Google Calendar
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Monitoring (optional)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
LOG_LEVEL=info

# Rate Limiting (optional - Redis for production)
REDIS_URL=redis://localhost:6379

# Frontend URLs
DASHBOARD_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3001

# Feature Flags
ENABLE_CRM_SYNC=false
ENABLE_CALENDAR_SYNC=false
